<odoo>
    <record id="house_location_offer_view_tree" model="ir.ui.view">
        <field name="name">house.location.offer.tree</field>
        <field name="model">house.location.offer</field>
        <field name="arch" type="xml">
        
            <!--  editable="bottom" -->
            <tree string="Channel">
                <field name='id'/>
                <field name='price'/>
                <field name='partner_id'/>
                <field name='validity'/>
                <field name='date_deadline'/>
                <button name="accept_offer" type="object" string="Accept"/>
                <button name="refuse_offer" type="object" string="Refuse"/>
                <field name='status'/>
            </tree>
        </field>
    </record>
</odoo>